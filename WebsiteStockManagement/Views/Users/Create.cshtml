@model WebsiteStockManagement.Models.User

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Enter First Name</label>
                <input asp-for="UsersFirstname" class="form-control" />
                <span asp-validation-for="UsersFirstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Enter Surname</label>
                <input asp-for="UsersSurname" class="form-control" />
                <span asp-validation-for="UsersSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Enter Password</label>
                <input type="password" asp-for="UsersPassword" class="form-control" />
                <span asp-validation-for="UsersPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Enter Role</label>
                <select asp-for="UsersRole" class="form-control" asp-items="ViewBag.Role"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">View All Farmers</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
